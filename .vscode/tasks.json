{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Remote Build & Log",
            "type": "shell",
            "windows": {
                "command": "powershell",
                "args": [
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File",
                    "${workspaceFolder}/tools/build_bridge.ps1"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "${workspaceFolder}/tools/build_bridge.sh"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "${workspaceFolder}/tools/build_bridge.sh"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}